
<%= form_for(@book) do |f| %>
  <%= f.label :書籍コード %>
  <%= f.text_field :book_code %>
  <%= f.label :出版社コード %>
  <%= f.collection_select :publisher_code, Publisher.all, :id, :name,
                               :prompt => "出版社コードを選択" %>
    <%= f.label :書籍名 %>
  <%= f.text_field :book_title %>
    <%= f.label :送信出版社コード %>
  <%= f.collection_select :publisher_code, Publisher.all, :id, :name,
                               :prompt => "送信出版社コードを選択" %>
  <%= f.submit "登録" %>
<% end %>